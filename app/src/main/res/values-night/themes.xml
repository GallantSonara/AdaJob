<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdaJob" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/rich_electric_blue</item>
        <item name="colorPrimaryVariant">@color/yankees_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/capri</item>
        <item name="colorSecondaryVariant">@color/vivid_cerulean</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/dark_gunmetal</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:windowBackground">@color/timber</item>
    </style>

    <style name="CardViewTheme" parent="Theme.AppCompat">
        <item name="cardBackgroundColor">@color/timber</item>
    </style>

    <style name="CustomPageTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/custom_tf_bg</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/rich_electric_blue</item>
    </style>

    <style name="AppToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="AppToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:titleTextAppearance">@style/AppToolbarTitleStyle</item>
    </style>
</resources>